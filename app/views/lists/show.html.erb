<h2><%= @list.name %></h2>
<ul class="list-group">
<% if  @list.photo.attached? %>
<%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>
<% end %>
  <% @list.bookmarks.each do |bookmark|%>
    <li class="list-group-item"><%= bookmark.comment %></li>
    <li class="list-group-item"><%= bookmark.movie.title %></li>
    <li class="list-group-item"><%= bookmark.movie.overview %></li>
    <%= image_tag bookmark.movie.poster_url, alt: bookmark.movie.title, class: "movie-img rounded-top", width: 200 %>
      <p> <%= link_to "Delete",
                  bookmark_path(bookmark),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %></p>
  <% end %>
</ul>


<%= link_to 'Create a bookmark', new_list_bookmark_path(@list), class: "btn btn-primary" %>

<br>
<br><%= link_to "Back",  root_path, class: "btn btn-primary" %>
